#popupList.modal.fade.text-dark(role="dialog" aria-hidden="true" tabindex="-1" aria-labelledby="popupListLabel")
    .modal-dialog.modal-dialog-centered(role="document")
        .modal-content.border-0.shadow-m
            .modal-header.p-2
                #popupListLabel.modal-title
                    button#all.btn.btn-sm.btn-outline-secondary(type="button") All
                .mx-auto.d-flex
                    button#co.btn.btn-sm.btn-outline-danger.mr-1(type="button") Coles
                    button#ww.btn.btn-sm.btn-outline-success(type="button") Woolworths
                button.close(type="button" data-dismiss="modal" aria-label="Close")
                    i.fas.fa-times.p-1.md-font(aria-hidden="true")
            .modal-body.p-1
                #popupCard.card.border-0.shadow-m.mb-1(style="display: none")
                    .row.no-gutters.flex-nowrap
                        #title.col-auto.rounded-left.text-white.text-center.p-1.pt-2.pb-2.md-font(style="writing-mode: vertical-rl")
                        .col-3.col-md-2.d-flex
                            img.img-fluid.w-100.p-2.align-self-center
                        .d-flex.flex-wrap.flex-fill.flex-md-nowrap
                            #itemDesc.card-text.md-font.text-secondary.p-1.flex-fill
                            .align-self-center.p-1
                                .input-group.input-group-sm.flex-nowrap
                                    .input-group-prepend
                                        button#minus.btn.btn-light(type="button")
                                            i.fas.fa-minus.md-font
                                    #qty.input-group-text.border-0.rounded-0.bg-white.md-font
                                    .input-group-append
                                        button#plus.btn.btn-light(type="button")
                                            i.fas.fa-plus.md-font
                        .align-self-center.col-2
                            #priceTag.d-flex.align-items-center
                                #price.md-font
                                button#down.btn.text-success.btn-sm.md-font.p-0(style="display: none")
                                    i.fas.fa-long-arrow-alt-down
                                button#up.btn.text-danger.btn-sm.md-font.p-0(style="display: none")
                                    i.fas.fa-long-arrow-alt-up
                            #discount.badge.badge-warning.rounded-pill.sm-font.position-absolute
                            #promo.badge.badge-warning.rounded-pill.sm-font.position-absolute
                        .d-flex.col-1.p-1.justify-content-center
                            i#uncheck.far.fa-square.align-self-center
                            i#check.far.fa-check-square.align-self-center.position-absolute(style="display: none")
                            button#remove.btn.text-dark.btn-sm.p-0.align-self-end.position-absolute
                                i.fas.fa-trash-alt
            .modal-footer.p-2
                .mr-auto
                    #totalPrice.lg-font.text-dark
                    #totalSaving.md-font.text-secondary
                button.btn.btn-sm.btn-secondary(data-dismiss="modal") Close